<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    x:Class="Zuemail.Controls.CustomSwitch"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:controls="clr-namespace:Zuemail.Controls">
    <ContentView.Resources>
        <controls:Unselected x:Key="unselected" />
        <controls:Selected x:Key="selected" />
        <controls:SwitchPill x:Key="pill" />
        <controls:SwitchBackground x:Key="background" />
    </ContentView.Resources>

    <Grid Margin="10">
        <GraphicsView
            Drawable="{StaticResource background}"
            TranslationY="-2"
            VerticalOptions="Center" />
        <GraphicsView Drawable="{StaticResource selected}" VerticalOptions="Center" />
        <GraphicsView Drawable="{StaticResource unselected}" VerticalOptions="Center" />
    </Grid>

</ContentView>
